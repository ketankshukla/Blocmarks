<%= content_tag_for :div, bookmark, class: 'col-xs-12 col-md-3 col-lg-3' do %>
    <div style="position: relative">
      <%= link_to( bookmark.url, topic_bookmark_path( bookmark.topic, bookmark), class: "thumbnail" ) %>
    </div>
    <div align="center">
      <%= render partial: 'likes/like', locals: { bookmark: bookmark } %>
    </div>
    <br/>
<% end %>